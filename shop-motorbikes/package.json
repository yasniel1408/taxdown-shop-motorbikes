{
  "name": "shop-motorbikes",
  "version": "1.0.0",
  "description": "Motorbike shop customer management API with API Gateway",
  "main": "handler.js",
  "scripts": {
    "start:db": "docker-compose up -d",
    "create:table": "node scripts/create-local-table.js",
    "offline": "npm run build && serverless offline --stage local",
    "dev": "npm run start:db && npm run create:table && npm run dev --stage dev",
    "build": "tsc",
    "deploy:dev": "npm run build && serverless deploy --stage dev",
    "deploy:prod": "npm run build && serverless deploy --stage prod",
    "test": "jest"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.585.0",
    "@aws-sdk/lib-dynamodb": "^3.585.0",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^8.0.0",
    "reflect-metadata": "^0.2.2",
    "serverless-http": "^3.2.0",
    "tsyringe": "^4.8.0",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.146",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "jest": "^29.7.0",
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-dynamodb-local": "^0.2.40",
    "serverless-offline": "^13.3.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2"
  }
}
